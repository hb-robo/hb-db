<!DOCTYPE html>
<html prefix="og: https://ogp.me/ns#">
	<head>
		<title>hayden's stuff</title>
		<meta name="description" content="writing, programming, design, etc." />
		<meta charset="utf-8" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://www.haydenbrown.dev" />
        <link rel="stylesheet" href="/css/output.css">
        <script src="/js/leader-line.min.js"></script>
        
	</head>
    <body>
        <div id="home" class="flex flex-col min-h-screen w-9/10">
            <header class="h-10 bg-red-500"></header>
            <main class="flex-grow bg-green-100 grid grid-cols-7 gap-4 items-center justify-center h-full">
                <div class="col-span-1"></div>
                <div class="h-full col-span-1 flex flex-col items-center justify-center">
                    <div class="flex flex-col justify-center items-center absolute top-1/4">
                        <h2 class="font-mono text-2xl flex flex-col items-center justify-center">/input</h2>
                        <ul class="input-nodes flex flex-col items-center justify-center space-y-12">
                            <li id="education" class="input text-7xl">🎓</li>
                            <li id="games" class="input text-7xl">🕹️</li>
                            <li id="books" class="input text-7xl">📚</li>
                            <li id="music" class="input text-7xl">🎧</li>
                            <li id="films" class="input text-7xl">🎞️</li>
                        </ul>
                    </div>
                </div>
                <div class="flex flex-col items-center space-y-20 col-span-3 h-full">
                    <div class="flex flex-col justify-center items-center absolute top-1/2 transform -translate-y-1/2">
                        <div id="brain" class="items-center text-9xl">🧠</div>
                        <div id="about" class="text-7xl mt-40">
                            <p class="mb-4">🙋</p>
                            <h2 class="font-mono text-2xl">/about</h2>
                        </div>
                    </div>
                </div>
                <div class="h-full col-span-1 flex flex-col items-center justify-center">
                    <div class="flex flex-col justify-center items-center absolute top-1/4">
                        <h2 class="font-mono text-2xl flex flex-col items-center justify-center">/output</h2>
                        <ul class="output-nodes flex flex-col items-center justify-start space-y-12">
                            <li id="code" class="output text-7xl">🧑‍💻</li>
                            <li id="contributions" class="output text-7xl">🤝</li>
                            <li id="thoughts" class="output text-7xl">💭</li>
                            <li id="works" class="output text-7xl">✍️</li>
                        </ul>
                    </div>
                </div>
                <div class="col-span-1"></div>
            </main>
            <footer class="h-10 bg-gray-400 text-white flex flex-col items-center justify-center">&copy; 2021-2023 | designed by hayden brown</footer>
        </div>
        <script>
            var input = document.getElementsByClassName('input');
            var output = document.getElementsByClassName('output');
            var brain = document.getElementById('brain');
            var about = document.getElementById('about');

            lines = {inputLines: {}, outputLines: {}}
            for(let i=0; i < input.length; i++) {
                let line = new LeaderLine(input[i], brain, {startSocket:'right', endSocket:'left', endPlug: 'arrow1'});
                lines.inputLines[input[i].id] = line
            }
            for(let i=0; i < output.length; i++) {
                let line = new LeaderLine(brain, output[i], {startSocket:'right', endSocket:'left', endPlug: 'arrow1'});
                lines.outputLines[output[i].id] = line
            }
            new LeaderLine(brain, about, {startPlug: 'arrow1', endPlug: 'arrow1'});

            input.addEventListener('mouseover', function() {
                let id = this.id;
                lines.inputLines[id].dash.animation = true;
            })
            input.addEventListener('mouseout', function() {
                let id = this.id;
                delete lines.inputLines[id].dash;
            })
            output.addEventListener('mouseover', function() {
                let id = this.id;
                lines.outputLines[id].dash.animation = true;
            })
            output.addEventListener('mouseout', function() {
                let id = this.id;
                delete lines.outputLines[id].dash;
            })
        </script>
    </body>
</html>
